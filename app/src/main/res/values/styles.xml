<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_color</item>
        <item name="textAllCaps"> true </item>
        <item name="textAppearanceButton">@color/txt_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxBackgroundColor">@color/background_textbox</item>
    </style>

    <style name="Logo" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

</resources>
