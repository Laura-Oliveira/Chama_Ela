        <!-- ========= REGISTER SERVICE PRICE ========= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_sevice_price"
        style="@style/TextBox"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/register_service_price"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/materialTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_service_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_service_price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal|textNoSuggestions"
            android:maxLength="11"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

        <!-- ========= REGISTER USER RADIO BUTTON TYPE USER ========= -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/register_service_mobility"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_sevice_price" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/register_service_price_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn_register_service_yes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:minHeight="48dp"
            android:text="@string/register_service_radio_yes"
            android:textSize="10pt" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn_register_service_no"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/register_service_radio_no"
            android:textSize="10pt" />

    </RadioGroup>

        <!-- ========= REGISTER SERVICE PRICE ========= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_service_price_ticket"
        style="@style/TextBox"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/register_service_price_ticket"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_service_price_ticket_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal|textNoSuggestions"
            android:maxLength="11"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

        <!-- ========= REGISTER USER BUTTON ========= -->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register_service"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="registerService"
        android:text="@string/btn_register_service"
        android:textColor="@color/txt_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_service_price_ticket" />


</androidx.constraintlayout.widget.ConstraintLayout>